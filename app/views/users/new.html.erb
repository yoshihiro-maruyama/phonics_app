<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages' %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Create account", class:"btn" %>
<% end %>
